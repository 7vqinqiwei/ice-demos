<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
    <Import Project="../../../../../msbuild/ice.common.props"/>
    <PropertyGroup>
        <AssemblyName>client</AssemblyName>
        <OutputType>Exe</OutputType>
        <TargetFramework>$(IceDemosTargetFramework)</TargetFramework>
        <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
        <OutputPath>../../../</OutputPath>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <Company>ZeroC, Inc.</Company>
        <AssemblyTitle>Ice properties demo client</AssemblyTitle>
        <Description>Ice properties demo client</Description>
        <Copyright>Copyright (c) 2003-2017 ZeroC, Inc.</Copyright>
        <Product>Ice</Product>
        <AssemblyVersion>1.0.0.0</AssemblyVersion>
        <FileVersion>1.0.0.0</FileVersion>
    </PropertyGroup>
    <ItemGroup>
        <Compile Include="../../../Client.cs"/>
        <Slice Include="../../../Props.ice"/>
    </ItemGroup>
    <Choose>
        <!--Using Ice built from source-->
        <When Condition="'$(ICE_HOME)' != ''">
            <ItemGroup>
                <Reference Include="$(ICE_HOME)/csharp/lib/netstandard2.0/Ice.dll"/>
            </ItemGroup>
        </When>
        <!--Using Ice NuGet package-->
        <Otherwise>
            <ItemGroup>
                <PackageReference Include="zeroc.ice.net" Version="3.7.0"/>
            </ItemGroup>
        </Otherwise>
    </Choose>
    <ImportGroup Condition="'$(ICE_HOME)' != ''">
        <!--Using Ice built from source-->
        <Import Project="$(ICE_HOME)/csharp/msbuild/zeroc.ice.net.targets"/>
    </ImportGroup>
</Project>

<Project Sdk="Microsoft.NET.Sdk">
    <Import Project="../../../../../msbuild/ice.common.props" />
    <PropertyGroup>
        <AssemblyName>helloservice</AssemblyName>
        <TargetFrameworks>netcoreapp2.0</TargetFrameworks>
        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
        <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
        <OutputPath>../../../</OutputPath>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    </PropertyGroup>
    <ItemGroup>
        <Compile Include="../../helloservice/Properties/AssemblyInfo.cs" />
        <Compile Include="../../../HelloI.cs" />
        <Compile Include="../../../HelloServiceI.cs" />
        <Slice Include="../../../Hello.ice" />
    </ItemGroup>
    <ItemGroup Condition="'$(ICE_HOME)' != ''">
        <Reference Include="$(ICE_HOME)/csharp/lib/netstandard2.0/Ice.dll" />
        <Reference Include="$(ICE_HOME)/csharp/lib/netstandard2.0/IceBox.dll" />
        <IceBoxNet Include="$(ICE_HOME)/csharp/bin/netcoreapp2.0/*"/>
    </ItemGroup>
    <ItemGroup Condition="'$(ICE_HOME)' == ''">
        <PackageReference Include="zeroc.ice.net" Version="3.7.0" />
        <IceBoxNet Include="$(IceHome)/tools/netcoreapp2.0/*"/>
    </ItemGroup>
    <Target Name="CopyIceBoxNet" AfterTargets="Build">
        <Copy SourceFiles="@(IceBoxNet)" DestinationFolder="$(OutputPath)" />
    </Target>
    <Target Name="CleanIceBoxNet" AfterTargets="Clean">
        <Delete Files="@(IceBoxNet->$(OutputPath)%(Identity)" />
    </Target>
    <Import Project="$(ICE_HOME)/csharp/msbuild/zeroc.ice.net.targets" Condition="Exists('$(ICE_HOME)/csharp/msbuild/zeroc.ice.net.targets')"/>
</Project>
